<Window
    x:Class="MediaLibraryEditor.WPF.Views.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MediaLibraryEditor.WPF.ViewModels"
    xmlns:vw="clr-namespace:MediaLibraryEditor.WPF.Views"
    Title="PopupWindow"
    Height="500"
    Width="600">

    <Window.Resources>
        <!-- Add bindings for ViewModel to View here (or in Resources file) -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Resources/ViewMappingsDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ContentPresenter
            Content="{Binding}" />
    </Grid>
</Window> 