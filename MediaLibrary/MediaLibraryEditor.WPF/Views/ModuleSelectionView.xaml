<UserControl
    x:Class="MediaLibraryEditor.WPF.Views.ModuleSelectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto"
    Width="Auto">
    <StackPanel>
        <TextBlock
            FontWeight="Bold">Media Library Modules</TextBlock>
        <Button
            Command="{Binding MusicImportCommand}"
            Content="Music - Import Folder" />
        <Button
            Command="{Binding MusicEditGenreCommand}"
            Content="Music - Edit Genre" />
        <Button
            Command="{Binding MusicEditArtistCommand}"
            Content="Music - Edit Artist" />
        <Button
            Command="{Binding MusicEditSongCommand}"
            Content="Music - Edit Song" />

    </StackPanel>
</UserControl>
